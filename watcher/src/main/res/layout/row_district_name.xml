<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_rv_tile"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="10dp"
    android:elevation="2dp"
    android:clickable="true"
    android:paddingVertical="10dp"
    >
    <TextView
        android:id="@+id/tv_districtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="District Name"
        android:textColor="@color/tile_text_color"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingVertical="5dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:textColor="@color/tile_text_color"
                android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv_dist_confirmed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/tile_text_color"
                android:gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingVertical="5dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="@color/tile_text_color"
                android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv_dist_active"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/tile_text_color"
                android:gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingVertical="5dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Recovered"
                android:textColor="@color/tile_text_color"
                android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv_dist_recovered"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/tile_text_color"
                android:gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingVertical="5dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Deceased"
                android:textColor="@color/tile_text_color"
                android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv_dist_deceased"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/tile_text_color"
                android:gravity="center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>